{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "demo/**/*",
    "demo/**/*.vue"
  ],
  "exclude": [
    "./src/tests/**/*.spec.ts",
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    /* enable decorators & inversify*/
    "target": "ES2015",
    "module": "es2020",
    //    "lib": ["ES2021.String"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "types": [
      "reflect-metadata",
      "vitest/globals"
    ],
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    //    "strictNullChecks": true,
    "allowJs": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}